<!-- Desktop Category Bar -->
<div class="all-categories-bar">
  <% if (typeof categories !== 'undefined' && categories && categories.length) { %>
    <% categories.forEach(category => { %>
      <div class="category-bar-item">
        <a href="/api/products/products?category=<%= encodeURIComponent(category.name) %>">
          <span><%= category.name %></span>
        </a>
        <% if (category.subcategories && category.subcategories.length > 0) { %>
          <div class="subcategory-list">
            <% category.subcategories.forEach(sub => { %>
              <a href="/api/products/products?category=<%= encodeURIComponent(category.name) %>&sub=<%= encodeURIComponent(sub.name) %>">
                <%= sub.name %>
              </a>
            <% }) %>
          </div>
        <% } %>
      </div>
    <% }) %>
  <% } else { %>
    <p>No categories available</p>
  <% } %>
</div>

<!-- Hamburger Menu (Mobile) -->
<button class="hamburger-menu" id="hamburgerMenuBtn" aria-label="Open Categories">
  <span>☰</span>
</button>
<div class="category-dropdown" id="categoryDropdown" aria-hidden="true">
  <button class="close-btn" id="closeCategoryDropdownBtn" aria-label="Close Categories">×</button>
  <a href="/">Home</a>
  <a href="https://www.homegardennet.com/?m=1" target="_blank" rel="noopener">Blog</a>
  <a href="/policy">Policy</a>
  <a href="/cart">Cart</a>
  <% if (typeof categories !== 'undefined' && categories && categories.length) { %>
    <% categories.forEach(category => { %>
      <strong><%= category.name %></strong>
      <% if (category.subcategories && category.subcategories.length > 0) { %>
        <div class="mobile-subcategories">
          <% category.subcategories.forEach(sub => { %>
            <a href="/api/products/products?category=<%= encodeURIComponent(category.name) %>&sub=<%= encodeURIComponent(sub.name) %>" class="mobile-sub-link">
              &nbsp;&nbsp;• <%= sub.name %>
            </a>
          <% }) %>
        </div>
      <% } %>
    <% }) %>
  <% } else { %>
    <p>No categories available</p>
  <% } %>
</div>

<style>
/* Reset default margins and ensure box-sizing */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  padding-top: 110px; /* Space for fixed header and category bar */
  font-family: 'Poppins', Arial, sans-serif;
}

/* Desktop Category Bar */
.all-categories-bar {
  background: #fff;
  border-bottom: 1px solid #e0e0e0;
  padding: 12px 16px;
  display: flex;
  gap: 16px;
  justify-content: center;
  flex-wrap: wrap;
  position: fixed;
  top: 60px;
  left: 0;
  width: 100%;
  z-index: 900;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
}

.category-bar-item {
  position: relative;
}

.category-bar-item a {
  color: #388e3c;
  text-decoration: none;
  font-weight: 500;
  padding: 8px 12px;
  border-radius: 20px;
  transition: background-color 0.3s, color 0.3s;
  display: inline-block;
}

.category-bar-item a:hover {
  background-color: rgba(56, 142, 60, 0.1);
}

.subcategory-list {
  display: none;
  position: absolute;
  top: 100%;
  left: 0;
  background: #fff;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  padding: 8px;
  margin-top: 4px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  min-width: 150px;
  z-index: 1000;
}

.category-bar-item:hover .subcategory-list,
.category-bar-item:focus-within .subcategory-list {
  display: block;
}

.subcategory-list a {
  color: #388e3c;
  padding: 6px 8px;
  border-radius: 4px;
  display: block;
  font-size: 0.95rem;
  text-decoration: none;
  transition: background-color 0.3s;
}

.subcategory-list a:hover {
  background-color: rgba(56, 142, 60, 0.1);
}

/* Hamburger Menu */
.hamburger-menu {
  display: none;
  position: fixed;
  top: 12px;
  right: 16px;
  background: #fff;
  border: 1px solid #e0e0e0;
  color: #388e3c;
  font-size: 1.5rem;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  z-index: 1300;
  cursor: pointer;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.07);
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-dropdown {
  display: none;
  position: fixed;
  top: 0;
  right: -100%;
  width: 80vw;
  max-width: 300px;
  height: 100vh;
  background: #176b2c;
  color: #fff;
  z-index: 1200;
  box-shadow: -2px 0 16px rgba(0, 0, 0, 0.18);
  padding: 40px 20px;
  transition: right 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow-y: auto;
}

.category-dropdown.show {
  right: 0;
  display: block;
}

.category-dropdown a,
.category-dropdown strong {
  display: block;
  color: #fff;
  text-decoration: none;
  font-size: 1.1rem;
  margin: 12px 0;
  font-weight: 600;
}

.category-dropdown a {
  font-weight: 400;
  font-size: 1rem;
  margin: 8px 0 8px 16px;
  color: #e0ffe0;
  border-left: 2px solid #4caf50;
  padding-left: 10px;
  transition: color 0.2s;
}

.category-dropdown a:hover {
  color: #4caf50;
}

.category-dropdown .close-btn {
  position: absolute;
  top: 12px;
  right: 12px;
  background: none;
  border: none;
  color: #fff;
  font-size: 1.5rem;
  cursor: pointer;
  z-index: 1202;
}

/* Mobile Subcategories */
.mobile-subcategories {
  margin-left: 18px;
  margin-bottom: 8px;
}

.mobile-sub-link {
  font-size: 0.98rem;
  color: #b2ffb2;
  margin-left: 8px;
  display: block;
}

.mobile-sub-link:hover {
  color: #4caf50;
}

/* Responsive */
@media (max-width: 800px) {
  .all-categories-bar {
    display: none;
  }
  .hamburger-menu {
    display: flex;
  }
  body {
    padding-top: 60px;
  }
}

@media (min-width: 801px) {
  .hamburger-menu,
  .category-dropdown {
    display: none !important;
  }
  .all-categories-bar {
    display: flex;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const hamburgerBtn = document.getElementById('hamburgerMenuBtn');
  const categoryDropdown = document.getElementById('categoryDropdown');
  const closeCategoryBtn = document.getElementById('closeCategoryDropdownBtn');

  // Toggle dropdown on hamburger click
  hamburgerBtn.addEventListener('click', (e) => {
    e.stopPropagation();
    const isOpen = categoryDropdown.classList.contains('show');
    categoryDropdown.classList.toggle('show', !isOpen);
    categoryDropdown.setAttribute('aria-hidden', !isOpen);
  });

  // Close dropdown on close button click
  closeCategoryBtn.addEventListener('click', (e) => {
    e.stopPropagation();
    categoryDropdown.classList.remove('show');
    categoryDropdown.setAttribute('aria-hidden', 'true');
  });

  // Close dropdown when clicking outside
  document.addEventListener('click', (e) => {
    if (
      categoryDropdown.classList.contains('show') &&
      !categoryDropdown.contains(e.target) &&
      e.target !== hamburgerBtn &&
      !hamburgerBtn.contains(e.target)
    ) {
      categoryDropdown.classList.remove('show');
      categoryDropdown.setAttribute('aria-hidden', 'true');
    }
  });

  // Prevent dropdown from closing when clicking inside
  categoryDropdown.addEventListener('click', (e) => {
    e.stopPropagation();
  });

  // Close dropdown on Escape key press
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && categoryDropdown.classList.contains('show')) {
      categoryDropdown.classList.remove('show');
      categoryDropdown.setAttribute('aria-hidden', 'true');
    }
  });
});
</script>