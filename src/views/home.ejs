    /* Utility */
    .hidden {
      display: none !important;
    }
    
    /* Header & Navigation */
    header {
      background-color: #4CAF50;
      padding: 10px 20px;
      position: fixed;
      width: 100%;
      top: 0;
      z-index: 1000;
    }
    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: nowrap;
      overflow-x: auto;
    }
    .logo {
      height: 50px;
      margin-right: 20px;
      background: none;
    }
    .nav-links {
      display: flex;
      gap: 20px;
      align-items: center;
      flex-shrink: 0;
    }
    .nav-links a {
      color: #fff;
      text-decoration: none;
      font-weight: 500;
      padding: 5px 10px;
      border-radius: 4px;
      transition: background-color 0.3s;
      cursor: pointer;
      white-space: nowrap;
    }
    .nav-links a:hover {
      background-color: rgba(255, 255, 255, 0.3);
    }
    .nav-icons {
      display: flex;
      align-items: center;
      gap: 15px;
      position: relative;
      flex-shrink: 0;
    }
    .search-bar {
      padding: 6px 10px;
      border-radius: 20px;
      border: 1px solid #ddd;
      width: 200px;
    }
    .cart-icon-btn, .profile-icon-btn {
      background: none;
      border: none;
      cursor: pointer;
    }
    .cart-icon, .profile-icon {
      width: 30px;
      height: 30px;
      filter: brightness(0) invert(1);
    }
    
    /* Profile Dropdown (hidden by default) */
    .profile-dropdown {
      position: absolute;
      top: 45px;
      right: 0;
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 5px;
      padding: 10px;
      min-width: 150px;
      display: none;
      flex-direction: column;
      box-shadow: 0px 4px 8px rgba(0,0,0,0.1);
      text-align: left;
    }
    .profile-dropdown p {
      margin: 5px 0;
      font-size: 0.9rem;
    }
    .profile-dropdown a,
    .profile-dropdown button {
      color: #4CAF50;
      text-decoration: none;
      padding: 5px 10px;
      font-size: 0.9rem;
      background: none;
      border: none;
      cursor: pointer;
      width: 100%;
      text-align: left;
    }
    .profile-dropdown a:hover,
    .profile-dropdown button:hover {
      background-color: #f1f1f1;
    }
    
    /* Hero Section */
    .hero-banner {
      /* Optional: You can add a gradient overlay or other background effects here if needed */
      padding: 80px 20px 40px; /* top padding accommodates fixed header */
    }
    /* Hero Slider Styles */
    .hero-slider {
      position: relative;
      width: 100%;
      height: 500px; /* Adjust the height as needed */
      overflow: hidden;
    }
    .hero-slider .slide {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      opacity: 0;
      transition: opacity 1s ease-in-out;
    }
    .hero-slider .slide.active {
      opacity: 1;
    }
    
    .hero-banner p {
      font-size: 1.2rem;
      max-width: 800px;
      margin: 0 auto 20px;
      line-height: 1.6;
    }
    .cta-button {
      display: inline-block;
      padding: 10px 20px;
      background-color: #4CAF50;
      color: #fff;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s;
      font-size: 1rem;
    }
    .cta-button:hover {
      background-color: #45a049;
    }
    
    /* Category Section */
    .category {
      padding: 20px;
      margin: 40px 10px;
      background-color: #f5f5f5;
      border-radius: 10px;
    }
    .category h2 {
      background-color: #4CAF50;
      color: #fff;
      padding: 10px;
      border-radius: 5px;
      margin-top: 0;
      font-size: 2rem;
    }
    .category-box {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }
    .product-item {
      background: #fff;
      border: 1px solid #ddd;
      border-radius: 5px;
      padding: 15px;
      width: 250px; /* Fixed width for all product boxes */
      height: 350px; /* Fixed height for all product boxes */
      margin: 0 auto;
      text-align: center;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Smooth shadow for better appearance */
      transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth hover effect */
    }

    .product-item:hover {
      transform: translateY(-5px); /* Slight lift on hover */
      box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15); /* Enhanced shadow on hover */
    }

    .product-item img {
      width: 100%;
      height: 190px;      /* Increased image height for desktop/tablet */
      object-fit: cover;
      border-radius: 8px;
      background: #f9f9f9;
      margin-bottom: 10px;
    }

    .product-item p {
      margin: 10px 0;
      font-size: 1rem;
      line-height: 1.4;
    }

    .product-actions {
      display: flex;
      gap: 6px;
      justify-content: center;
      margin-top: 6px;
    }

    .product-actions a {
      flex: 1 1 0;
      padding: 7px 0;
      font-size: 0.97rem;
      text-align: center;
      border-radius: 5px;
      text-decoration: none;
      background: #3498db;
      color: #fff;
      transition: background 0.2s;
      min-width: 0;
      white-space: nowrap;
    }

    .product-actions a:hover {
      background-color: #45a049;
    }
    
    /* About Section */
    #about {
      padding: 50px 20px;
      background-color: #cbc5c5;
    }
    .about-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
