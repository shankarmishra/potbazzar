      text-align: left;
    }
    .about-text h2 {
      font-size: 2.5rem;
      margin-bottom: 15px;
    }
    .about-text p {
      font-size: 1.1rem;
      margin-bottom: 20px;
    }
    .contact-info h3 {
      font-size: 1.5rem;
      margin-bottom: 10px;
    }
    .social-links a {
      color: #4CAF50;
      text-decoration: none;
      margin-right: 10px;
      transition: color 0.3s;
    }
    .social-links a:hover {
      color: #45a049;
    }
    /* Additional Policy Text in About Section */
    .policy {
      font-size: 0.9rem;
      color: #777;
      margin-top: 10px;
    }
    .about-image {
      flex: 1;
    }
    .about-image img {
      width: 100%;
      border-radius: 5px;
    }
    
    /* Footer */
    .footer {
      background-color: #333;
      color: #fff;
      padding: 30px 20px;
      margin-top: 40px;
    }
    .footer-content {
      display: flex;
      justify-content: space-between;
      max-width: 1200px;
      margin: 0 auto;
      gap: 40px;
    }
    .footer-section h3 {
      font-size: 1.5rem;
      margin-bottom: 10px;
      color: #4CAF50;
    }
    .footer-section p {
      font-size: 1rem;
      margin: 5px 0;
    }
    .footer-bottom {
      text-align: center;
      margin-top: 20px;
      font-size: 10px;
    }
    .footer-bottom a {
      color: #4CAF50;
      text-decoration: none;
      transition: color 0.3s;
    }
    .footer-bottom a:hover {
      color: #45a049;
    }
    
    /* Modal */
    .modal {
      display: none;
      position: fixed;
      z-index: 1001;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      justify-content: center;
      align-items: center;
    }
    .modal-content {
      background-color: #fff;
      padding: 20px;
      border-radius: 5px;
      width: 400px;
      text-align: center;
      position: relative;
    }
    .modal-content h3 {
      margin-top: 0;
      color: #333;
    }
    .modal-content button {
      padding: 10px 20px;
      background-color: #4CAF50;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s;
      margin: 5px;
    }
    .modal-content button:hover {
      background-color: #45a049;
    }
    .close-btn {
      position: absolute;
      top: 10px;
      right: 10px;
      background: none;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      color: #333;
    }

    /* Cart Popup Notification */
    .popup {
      position: fixed;
      top: 70px; /* just below the header */
      left: 50%;
      transform: translateX(-50%);
