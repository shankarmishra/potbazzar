<style>
  .navbar {
    background-color: #141414;
    color: #FFFFFF;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    z-index: 1000;
    font-family: 'Inter', sans-serif;
  }

  .navbar-brand {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .navbar-brand a {
    font-size: 1.5rem;
    font-weight: 700;
    color: #DC2040;
    text-decoration: none;
  }

  .navbar-toggle {
    display: none;
    background: none;
    border: none;
    color: #FFFFFF;
    font-size: 2rem;
    cursor: pointer;
    margin-left: 1rem;
    transition: color 0.3s ease;
  }

  .navbar-toggle:hover {
    color: #DC2040;
  }

  .navbar-links {
    list-style: none;
    display: flex;
    gap: 1.5rem;
    margin: 0;
    padding: 0;
  }

  .navbar-links a {
    color: #FFFFFF;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .navbar-links a:hover {
    color: #DC2040;
  }

  .add-category-btn,
  .add-subcategory-btn {
    background: #DC2040;
    color: #FFFFFF !important;
    padding: 0.3rem 1rem;
    border-radius: 5px;
    font-weight: 600;
    transition: background 0.3s ease;
    margin-left: 0.5rem;
  }

  .add-category-btn:hover,
  .add-subcategory-btn:hover {
    background: #B71E35;
    color: #FFFFFF !important;
  }

  @media (max-width: 768px) {
    .navbar-links {
      flex-direction: column;
      gap: 1rem;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: #141414;
      padding: 1rem 2rem;
      display: none;
    }

    .navbar-links.active {
      display: flex;
    }

    .navbar-toggle {
      display: block;
    }

    .add-category-btn,
    .add-subcategory-btn {
      margin-left: 0;
      width: 100%;
      text-align: center;
      padding: 0.5rem 0;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const toggle = document.getElementById('navbarToggle');
    const links = document.getElementById('navbarLinks');

    if (toggle && links) {
      toggle.addEventListener('click', function () {
        links.classList.toggle('active');
      });
    }
  });
</script>
