<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= categoryName %><% if (subCategoryName) { %> - <%= subCategoryName %><% } %> | Plant Store</title>
  <link rel="stylesheet" href="/styles.css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
  <style>
    body {
      font-family: 'Poppins', Arial, sans-serif;
      background: #f9f9f9;
      color: #222;
      margin: 0;
      padding: 0;
      text-align: center;
    }
    header, footer {
      background:#4CAF50;
      color: white;
      padding: 15px;
      text-align: center;
    }
    footer p {
      margin: 0;
      font-size: 0.95rem;
    }
    nav {
      background: #388e3c;
      color: #fff;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 20px;
      height: 56px;
      position: sticky;
      top: 0;
      z-index: 1001;
    }
    .nav-links {
      display: flex;
      gap: 18px;
      align-items: center;
    }
    .nav-links a {
      color: #fff;
      text-decoration: none;
      font-weight: 500;
      padding: 8px 14px;
      border-radius: 20px;
      transition: background 0.3s, color 0.3s;
      font-size: 1rem;
    }
    .nav-links a:hover {
      background: rgba(255,255,255,0.18);
      color: #fff;
    }
    .three-dots {
      display: none;
      cursor: pointer;
      font-size: 2rem;
      color: #fff;
      margin-left: 10px;
      z-index: 1201;
      background: none;
      border: none;
      position: relative;
    }
    /* Category Bar */
    .all-categories-bar {
      background: #fff;
      border-bottom: 1px solid #e0e0e0;
      padding: 12px 10px;
      display: flex;
      gap: 24px;
      justify-content: center;
      flex-wrap: wrap;
      position: sticky;
      top: 56px;
      z-index: 900;
    }
    .category-bar-item {
      position: relative;
      margin-right: 18px;
      margin-bottom: 8px;
      white-space: nowrap;
    }
    .category-bar-item a {
      color: #388e3c;
      text-decoration: none;
      font-weight: 500;
      padding: 8px 12px;
      border-radius: 20px;
      transition: background 0.3s, color 0.3s;
      display: inline-block;
    }
    .category-bar-item a:hover {
      background: rgba(56,142,60,0.1);
    }
    .subcategory-list {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      background: #fff;
      border: 1px solid #e0e0e0;
      border-radius: 8px;
      padding: 10px;
      margin-top: 4px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      min-width: 150px;
      z-index: 1002;
    }
    .category-bar-item:hover .subcategory-list {
      display: block;
    }
    .subcategory-list a {
      color: #388e3c;
      padding: 6px 8px;
      border-radius: 4px;
      display: block;
      transition: background 0.3s;
      font-size: 0.98rem;
    }
    .subcategory-list a:hover {
      background: rgba(56,142,60,0.1);
    }
    /* Hamburger Menu */
    .category-dropdown {
      display: none;
      position: fixed;
      top: 0;
      right: -320px;
      width: 80vw;
      max-width: 320px;
      height: 100vh;
      background: #176b2c;
      color: #fff;
      z-index: 1200;
      box-shadow: -2px 0 16px rgba(0,0,0,0.18);
      padding: 40px 20px 20px 20px;
      transition: right 0.3s cubic-bezier(.4,0,.2,1);
      overflow-y: auto;
      font-family: 'Poppins', Arial, sans-serif;
    }
    .category-dropdown.show {
      display: block;
      right: 0;
    }
    .category-dropdown a,
    .category-dropdown strong {
      display: block;
      color: #fff;
      text-decoration: none;
      font-size: 1.1rem;
      margin: 18px 0 0 0;
      font-weight: 600;
      letter-spacing: 0.5px;
    }
    .category-dropdown a {
      font-weight: 400;
      font-size: 1rem;
      margin: 10px 0 0 18px;
      color: #e0ffe0;
      border-left: 2px solid #4caf50;
      padding-left: 10px;
      transition: color 0.2s;
    }
    .category-dropdown a:hover {
      color: #4caf50;
    }
    .category-dropdown .close-btn {
      position: absolute;
      top: 18px;
      right: 18px;
      background: none;
      border: none;
      color: #fff;
      font-size: 2rem;
      cursor: pointer;
      z-index: 1202;
    }
    /* Responsive */
    @media (max-width: 800px) {
      .all-categories-bar {
        display: none !important;
      }
      .three-dots {
        display: block !important;
        position: absolute;
        right: 16px;
        top: 14px;
      }
      .nav-links {
        display: none !important;
      }
    }
    @media (min-width: 801px) {
      .category-dropdown {
        display: none !important;
      }
      .three-dots {
        display: none !important;
      }
      .nav-links {
        display: flex !important;
      }
    }
    /* Product Grid */
    .category-box {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 20px;
      margin-top: 20px;
      justify-content: center;
    }
    .product-item {
      background: #fff;
      border: 1px solid #ddd;
      border-radius: 10px;
      padding: 15px;
      min-height: 340px;
      max-width: 260px;
      width: 100%;
      margin: 0 auto;
      text-align: center;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      box-shadow: 0 4px 6px rgba(0,0,0,0.08);
      transition: transform 0.3s, box-shadow 0.3s;
    }
    .product-item:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 18px rgba(52,152,219,0.13);
    }
    .product-item img {
      width: 100%;
      height: 120px;
      object-fit: cover;
      border-radius: 8px;
      background: #f9f9f9;
    }
    .product-item p {
      margin: 10px 0 6px 0;
      font-size: 1rem;
      color: #3498db;
      font-weight: 600;
    }
    .product-actions {
      display: flex;
      gap: 8px;
      justify-content: center;
      margin-top: 8px;
      flex-wrap: wrap;
    }
    .product-actions a {
      flex: 1 1 0;
      min-width: 0;
      box-sizing: border-box;
      padding: 8px;
      font-size: 0.95rem;
      text-align: center;
      border-radius: 5px;
      text-decoration: none;
      background: #3498db;
      color: #fff;
      transition: background 0.2s;
      width: 100%;
      max-width: 100%;
      margin: 0;
      overflow: hidden;
    }
    .product-actions a:hover {
      background: #217dbb;
    }
    @media (max-width: 900px) {
      .category-box { grid-template-columns: repeat(3, 1fr); }
    }
    @media (max-width: 600px) {
      .category-box { grid-template-columns: repeat(2, 1fr); }
      .product-item { max-width: 100%; }
      .product-actions {
        flex-direction: column;
        gap: 6px;
      }
      .product-actions a {
        width: 100%;
        min-width: 0;
        font-size: 0.9rem;
        padding: 8px 0;
        margin: 0;
        max-width: 100%;
      }
    }
    .no-categories {
      text-align: center;
      margin: 40px 0;
      color: #777;
    }
  </style>
</head>
<body>

  <header>
  
    <!-- Desktop Category Bar -->
    <div class="all-categories-bar">
      <% if (typeof categories !== 'undefined' && categories && categories.length) { %>
        <% categories.forEach(category => { %>
          <div class="category-bar-item">
            <a href="/api/products/products?category=<%= encodeURIComponent(category.name) %>">
              <span><%= category.name %></span>
            </a>
            <% if (category.subcategories && category.subcategories.length > 0) { %>
              <div class="subcategory-list">
                <% category.subcategories.forEach(sub => { %>
                  <a href="/api/products/products?category=<%= encodeURIComponent(category.name) %>&sub=<%= encodeURIComponent(sub.name) %>"><%= sub.name %></a>
                <% }) %>
              </div>
            <% } %>
          </div>
        <% }) %>
      <% } %>
    </div>
    <!-- Hamburger Menu (Mobile) -->
    <div class="category-dropdown" id="categoryDropdown">
      <button class="close-btn" onclick="toggleCategoryDropdown()">&times;</button>
      <a href="/">Home</a>
      <a href="https://www.homegardennet.com/?m=1" target="_blank">Blog</a>
      <a href="/#about">About</a>
      <a href="/policy">Policy</a>
      <a href="/cart">Cart</a>
      <% if (typeof categories !== 'undefined' && categories && categories.length) { %>
        <% categories.forEach(category => { %>
          <strong><%= category.name %></strong>
          <% if (category.subcategories && category.subcategories.length > 0) { %>
            <% category.subcategories.forEach(sub => { %>
              <a href="/api/products/products?category=<%= encodeURIComponent(category.name) %>&sub=<%= encodeURIComponent(sub.name) %>">
                &nbsp;&nbsp;â€¢ <%= sub.name %>
              </a>
            <% }) %>
          <% } %>
        <% }) %>
      <% } %>
    </div>
  </header>

  <main>
    <section class="category-header">
      <h1>
        <%= categoryName %>
        <% if (subCategoryName) { %>
          <span style="font-size:1.2rem;color:#3498db;">/ <%= subCategoryName %></span>
        <% } %>
      </h1>
      <% if (categoryDescription) { %>
        <p><%= categoryDescription %></p>
      <% } %>
    </section>

    <div class="search-bar-wrap">
      <input
        type="text"
        class="search-bar-category"
        id="categorySearch"
        placeholder="Search products in this category..."
        onkeyup="filterCategoryProducts()"
      />
    </div>

    <% if (products && products.length > 0) { %>
      <div class="category-box" id="categoryProductGrid">
        <% products.forEach(product => { %>
          <div class="product-item" data-name="<%= product.name.toLowerCase() %>">
            <img src="<%= (product.images && product.images[0]) ? product.images[0] : '/images/default-image.jpg' %>" alt="<%= product.name %>" />
            <p><strong><%= product.name %></strong></p>
            <p>â‚¹<%= product.price.toFixed(2) %></p>
            <div class="product-actions">
              <a href="/api/products/productdetails?id=<%= product._id %>">View Details</a>
              <!-- <a href="javascript:void(0)" onclick="addToCart('<%= product._id %>', '<%= product.name.replace(/'/g, "\\'") %>', '<%= product.price %>', '<%= (product.images && product.images[0]) ? product.images[0] : '' %>', '<%= (product.description || '').replace(/'/g, "\\'") %>')">Add to Cart</a> -->
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="no-categories">
        <h2>No Products Found</h2>
        <p>There are no products in this <%= subCategoryName ? 'subcategory' : 'category' %> yet.</p>
      </div>
    <% } %>
  </main>

  <footer>
    <p>&copy; <%= new Date().getFullYear() %> Plant Store. All rights reserved.</p>
  </footer>

  <script>
    function toggleCategoryDropdown() {
      const dropdown = document.getElementById('categoryDropdown');
      dropdown.classList.toggle('show');
    }
    window.addEventListener('click', function(e) {
      const dropdown = document.getElementById('categoryDropdown');
      if (dropdown && dropdown.classList.contains('show') && !dropdown.contains(e.target) && !e.target.classList.contains('three-dots')) {
        dropdown.classList.remove('show');
      }
    });

    function filterCategoryProducts() {
      const search = document.getElementById('categorySearch').value.toLowerCase();
      document.querySelectorAll('#categoryProductGrid .product-item').forEach(card => {
        const name = card.getAttribute('data-name');
        card.style.display = name.includes(search) ? '' : 'none';
      });
    }

    function addToCart(productId, productName, productPrice, productImage, productDescription) {
      if (!localStorage.getItem('token')) {
        alert('Please log in to add to cart.');
        return;
      }
      let cart = JSON.parse(localStorage.getItem('cart')) || [];
      const existing = cart.find(item => item.id === productId);
      if (existing) {
        existing.quantity += 1;
      } else {
        cart.push({
          id: productId,
          name: productName,
          price: parseFloat(productPrice),
          image: productImage || '/images/default-image.jpg',
          description: productDescription,
          quantity: 1
        });
      }
      localStorage.setItem('cart', JSON.stringify(cart));
      alert('Product added to cart!');
    }
  </script>

</body>
</html>
